<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/edtText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Text - Bai 02 Broadcast receiver" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send to broadcast receiver"
        android:textAllCaps="false"
        android:onClick="customBroadcast"/>

    <EditText
        android:id="@+id/edtText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Text - Bai 03 Broadcast receiver"
        android:layout_marginTop="50dp"
        android:maxLength="9"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send to broadcast receiver"
        android:textAllCaps="false"
        android:onClick="customBroadcast2"/>



</LinearLayout>